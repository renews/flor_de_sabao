<h1>Listing characteristics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @characteristics.each do |characteristic| %>
      <tr>
        <td><%= characteristic.name %></td>
        <td><%= characteristic.value %></td>
        <td><%= link_to 'Show', characteristic %></td>
        <td><%= link_to 'Edit', edit_characteristic_path(characteristic) %></td>
        <td><%= link_to 'Destroy', characteristic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

